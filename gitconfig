[core]
  editor  = nvim
  pager   = bat

[alias]
  pop             = stash pop
  drop            = stash drop
  dont-send-email = send-email --dry-run

[pager]
  show = "bat -l patch"
  log  = "bat -l patch --pager less"

[init]
	defaultBranch = main

[include]
  path = ~/.local.gitconfig
[remote-hg]
	hg-git-compat = true
